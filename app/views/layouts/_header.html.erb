<header class="main-header alt-bg header-short">
	<div class="header-content">
		<div class="container">
			<div class="row">
				<div class="col-xs-12">

					<!-- Logo -->
					<div class="logo-wrapper pull-left">
						<%= link_to root_path, class: "main-logo" do %>
							<%= image_tag "logo.png", alt: "Main logo" %>
						<% end %>
					</div>

					<!-- Main menu -->
					<nav class="nav-main pull-right" id="main-nav">
						<ul class="main-nav-list visible-sm visible-md visible-lg">
							<li><%= link_to "Home", "#", class: "menu-link-active page-scroll" %></li>
							<li><%= link_to "About", "#", class: "page-scroll" %></li>
							<li><%= link_to "Portfolio", "#", class: "page-scroll" %></li>
							<li><%= link_to "Contact", "#", class: "page-scroll" %></li>
							<li><%= link_to "Sign up", signup_path, class: "page-scroll" %></li>
							<% if logged_in? %>
								<li><%= link_to "Users", "#" %></li>
								<li class="dropdown">
									<a href="#" class="dropdown-toggle" data-toggle="dropdown">
										Account 
										<span class="caret"></span>
									</a>
									<ul class="dropdown-menu" role="menu">
										<li><%= link_to "Profile", current_user %></li>
              			<li><%= link_to "Settings", '#' %></li>
              			<li class="divider"></li>
              			<li>
              				<%= link_to "Log out", logout_path, method: "delete" %>
              			</li>
              		</ul>
								</li>
							<% else %>
								<%= link_to "Log in", login_path, class: "menu-item page-scroll" %>
							<% end %>
						</ul>
					</nav>

					<!-- Header clearfix -->
					<div class="clearfix"></div>
				</div>
			</div>
		</div>
	</div>
</header>

<!-- Header separator -->
<div class="top-separator"></div>
<div class=""></div>